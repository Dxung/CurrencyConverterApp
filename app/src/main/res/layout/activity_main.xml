<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f6f7"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/app_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:textSize="34sp"
        android:text="@string/app_header_name"/>

    <LinearLayout
        android:id="@+id/firstCurrencyLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/effect_background">

        <TextView
            android:id="@+id/select_currency_type_1"
            android:labelFor="@+id/currency_drop_list_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/currency_type_instruction"/>
        
        <Spinner
            android:id="@+id/currency_drop_list_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_background_gray"/>

        <TextView
            android:id="@+id/money_number_entering_1"
            android:labelFor="@+id/money_input_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/money_number_instruction"/>

        <EditText
            android:id="@+id/money_input_1"
            android:layout_width="368dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:paddingStart="15sp"
            android:paddingEnd="10sp"
            android:background="@drawable/rounded_background_gray"
            android:inputType="number"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:autofillHints="0"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/converting_symbol"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:contentDescription="@string/convert_symbol"
        android:background="@drawable/convert_symbol_rounded"/>

    <LinearLayout
        android:id="@+id/secondCurrencyLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/effect_background">


        <TextView
            android:id="@+id/select_currency_type_2"
            android:labelFor="@+id/currency_drop_list_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/currency_type_instruction"/>

        <Spinner
            android:id="@+id/currency_drop_list_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_background_gray"/>

        <TextView
            android:id="@+id/money_number_entering_2"
            android:labelFor="@+id/money_input_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/money_number_instruction2"/>

        <EditText
            android:id="@+id/money_input_2"
            android:layout_width="368dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:paddingStart="15sp"
            android:paddingEnd="10sp"
            android:background="@drawable/rounded_background_gray"
            android:inputType="number"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:autofillHints="0"/>
    </LinearLayout>






</LinearLayout>